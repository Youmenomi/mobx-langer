{
  "name": "mobx-langer",
  "version": "0.2.1",
  "description": "Localization tool with a unified interface and replaceable drivers.",
  "keywords": [
    "mobx",
    "typescript",
    "intl",
    "localization",
    "globalization",
    "translation",
    "multi-language",
    "remote",
    "scalable"
  ],
  "main": "dist/cjs/mobx-langer.cjs.js",
  "module": "dist/esm/mobx-langer.esm.js",
  "types": "src/index.d.ts",
  "files": [
    "dist",
    "src/index.d.ts"
  ],
  "scripts": {
    "test": "jest",
    "build:js": "rollup -c",
    "build:clean": "del dist",
    "build": "eslint --ext .ts,.js ./src && npm run build:clean && npm run build:js",
    "release": "np",
    "version": "npm run build"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Youmenomi/mobx-langer.git"
  },
  "author": "Dean Yao <youmenomi@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Youmenomi/mobx-langer/issues"
  },
  "homepage": "https://github.com/Youmenomi/mobx-langer#readme",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "del-cli": "^3.0.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "mobx": "^6.1.4",
    "np": "^7.2.0",
    "prettier": "^2.2.1",
    "rollup": "^2.38.4",
    "rollup-simple-configer": "^0.1.1",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "langer": "^0.2.0"
  },
  "peerDependencies": {
    "mobx": "^6.1.4"
  }
}
